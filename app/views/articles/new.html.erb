<h1> New Article </h1>

<%= form_for(@article) do | f | %>

  <%= f.label :title %><br>
  <%= f.text_field :title %></p>

  <%= f.label :author %><br>
  <%= f.text_field :author %></p>

  <%= f.label :date_published %><br>
  <%= f.text_field :date_published %></p>

  <%= f.label :publication %><br>
  <%= f.text_field :publication%></p>

  <%= f.label :subject %><br>
  <%= f.text_field :subject %></p>

  <%= f.label :abstract %><br>
  <%= f.text_area :abstract %></p>

  <%= f.label :full_article %><br>
  <%= f.text_area :full_article %></p>

  <%= f.label :notes %><br>
  <%= f.text_area :notes %></p>

  <%= f.submit 'Save Article' %>
<% end %>